<?xml version="1.0" encoding="utf-8"?>
<LinearLayout
    android:id="@+id/activity_highscore"
    xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="vertical"
    tools:context="nguyen.clickit.HighscoreActivity"
    android:background="#00FFFF">

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="horizontal"
        android:layout_marginTop="20dp"
        android:gravity="center"
        android:layout_marginRight="50dp">

        <ImageView
            android:id="@+id/yourScoreImage"
            android:layout_width="200dp"
            android:layout_height="60dp"
            android:src="@drawable/yourscoretv"
            style="@style/Image"
            android:rotation="-2" />

        <TextView
            android:id="@+id/scoreTV"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="@string/score_tv"
            android:textSize="50sp"
            style="@style/TextView"
            android:layout_marginTop="3dp"
            android:layout_marginLeft="10dp" />
    </LinearLayout>

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="horizontal"
        android:layout_marginTop="20dp"
        android:layout_marginRight="50dp"
        android:gravity="center">

        <ImageView
            android:id="@+id/highscoreImage"
            android:layout_width="200dp"
            android:layout_height="60dp"
            android:src="@drawable/highscoretv"
            style="@style/Image"
            android:rotation="2" />

        <TextView
            android:id="@+id/highscoreTV"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="@string/high_score_tv"
            android:textSize="50sp"
            style="@style/TextView"
            android:layout_marginTop="3dp"
            android:layout_marginLeft="10dp" />
    </LinearLayout>

    <ImageButton
        android:id="@+id/playAgainButton"
        android:layout_width="match_parent"
        android:layout_height="70dp"
        android:src="@drawable/playagainbutton"
        style="@style/Image"
        android:rotation="-2"
        android:layout_marginTop="70dp"
        android:layout_marginLeft="70dp"
        android:layout_marginRight="70dp" />

    <ImageButton
        android:id="@+id/quitButton"
        style="@style/Image"
        android:layout_width="match_parent"
        android:layout_height="60dp"
        android:layout_marginTop="70dp"
        android:layout_marginLeft="150dp"
        android:layout_marginRight="150dp"
        android:rotation="-2"
        android:src="@drawable/quitbutton" />

    <ImageButton
        android:id="@+id/resetScoreButton"
        android:layout_width="match_parent"
        android:layout_height="50dp"
        android:src="@drawable/resetscorebutton"
        style="@style/Image"
        android:layout_marginTop="90dp"
        android:layout_marginLeft="30dp"
        android:layout_marginRight="190dp"
        android:rotation="4"/>

</LinearLayout>
