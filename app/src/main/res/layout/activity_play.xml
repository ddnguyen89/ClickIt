<?xml version="1.0" encoding="utf-8"?>
<LinearLayout
    xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="vertical"
    tools:context="nguyen.clickit.PlayActivity"
    android:background="#00FFFF">

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="horizontal"
        android:layout_marginTop="20dp"
        android:gravity="center">

        <ImageView
            android:id="@+id/scoreImage"
            android:layout_width="100dp"
            android:layout_height="60dp"
            android:src="@drawable/scoretv"
            style="@style/Image" />

        <TextView
            android:id="@+id/scoreTV"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="@string/score_tv"
            android:textSize="40sp"
            style="@style/TextView"
            android:layout_marginTop="3dp"
            android:layout_marginLeft="10dp"/>


        <ImageView
            android:id="@+id/timerImage"
            android:layout_width="100dp"
            android:layout_height="60dp"
            android:src="@drawable/timetv"
            style="@style/Image"
            android:layout_marginLeft="30dp"/>

        <TextView
            android:id="@+id/timeTV"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="@string/time_tv"
            android:textSize="40sp"
            style="@style/TextView"
            android:layout_marginTop="3dp"
            android:layout_marginLeft="10dp"/>
    </LinearLayout>

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="horizontal"
        android:layout_marginTop="50dp"
        android:gravity="center">

        <Button
            android:id="@+id/greenButton"
            android:layout_width="110dp"
            android:layout_height="110dp"
            android:background="@drawable/green_button" />

        <Button
            android:id="@+id/redButton"
            android:layout_width="110dp"
            android:layout_height="110dp"
            android:background="@drawable/red_button"
            android:layout_marginLeft="20dp"/>
    </LinearLayout>

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="horizontal"
        android:layout_marginTop="20dp"
        android:gravity="center">

        <Button
            android:id="@+id/blueButton"
            android:layout_width="110dp"
            android:layout_height="110dp"
            android:background="@drawable/blue_button" />

        <Button
            android:id="@+id/yellowButton"
            android:layout_width="110dp"
            android:layout_height="110dp"
            android:background="@drawable/yellow_button"
            android:layout_marginLeft="20dp"/>
    </LinearLayout>


    <ImageButton
        android:id="@+id/quitButton"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:src="@drawable/quitbutton"
        style="@style/Image"
        android:layout_marginTop="30dp"
        android:layout_marginLeft="250dp"
        android:layout_marginRight="30dp"/>

</LinearLayout>
