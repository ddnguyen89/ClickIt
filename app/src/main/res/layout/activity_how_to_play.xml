<?xml version="1.0" encoding="utf-8"?>
<LinearLayout
    android:id="@+id/activity_how_to_play"
    xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="vertical"
    tools:context="nguyen.clickit.HowToPlayActivity"
    android:background="#00FFFF">

    <TabWidget
        android:id="@+id/tabs"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="horizontal"/>

    <ImageView
        android:id="@+id/HowToPlayImage"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:src="@drawable/howtoplaytv"
        android:layout_margin="20dp"/>

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="horizontal"
        android:gravity="center"
        android:layout_marginTop="10dp">

        <Button
            android:id="@+id/greenFalseButton"
            android:layout_width="50dp"
            android:layout_height="50dp"
            android:background="@drawable/green_button" />
        <ImageView
            android:id="@+id/arrowImage1"
            android:layout_width="wrap_content"
            android:layout_height="50dp"
            android:src="@drawable/arrow" />
        <Button
            android:id="@+id/greenTrueButton"
            android:layout_width="50dp"
            android:layout_height="50dp"
            android:background="@drawable/green_button" />
    </LinearLayout>

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="horizontal"
        android:gravity="center"
        android:layout_marginTop="10dp">

        <Button
            android:id="@+id/redFalseButton"
            android:layout_width="50dp"
            android:layout_height="50dp"
            android:background="@drawable/red_button" />
        <ImageView
            android:id="@+id/arrowImage2"
            android:layout_width="wrap_content"
            android:layout_height="50dp"
            android:src="@drawable/arrow" />
        <Button
            android:id="@+id/redTrueButton"
            android:layout_width="50dp"
            android:layout_height="50dp"
            android:background="@drawable/red_button" />
    </LinearLayout>

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="horizontal"
        android:gravity="center"
        android:layout_marginTop="10dp">

        <Button
            android:id="@+id/blueFalseButton"
            android:layout_width="50dp"
            android:layout_height="50dp"
            android:background="@drawable/blue_button" />
        <ImageView
            android:id="@+id/arrowImage3"
            android:layout_width="wrap_content"
            android:layout_height="50dp"
            android:src="@drawable/arrow" />
        <Button
            android:id="@+id/blueTrueButton"
            android:layout_width="50dp"
            android:layout_height="50dp"
            android:background="@drawable/blue_button" />
    </LinearLayout>

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="horizontal"
        android:gravity="center"
        android:layout_marginTop="10dp">

        <Button
            android:id="@+id/yellowFalseButton"
            android:layout_width="50dp"
            android:layout_height="50dp"
            android:background="@drawable/yellow_button" />
        <ImageView
            android:id="@+id/arrowImage4"
            android:layout_width="wrap_content"
            android:layout_height="50dp"
            android:src="@drawable/arrow" />
        <Button
            android:id="@+id/yellowTrueButton"
            android:layout_width="50dp"
            android:layout_height="50dp"
            android:background="@drawable/yellow_button" />
    </LinearLayout>

    <ImageView
        android:id="@+id/infoImage"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:src="@drawable/infotv"
        android:layout_marginLeft="20dp"
        android:layout_marginRight="20dp"/>

</LinearLayout>
