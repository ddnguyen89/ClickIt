<?xml version="1.0" encoding="utf-8"?>
<LinearLayout
    android:id="@+id/activity_highscore"
    xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="horizontal"
    tools:context="nguyen.clickit.HighscoreActivity"
    android:background="#00FFFF">

    <LinearLayout
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:orientation="vertical"
        android:layout_gravity="center_vertical"
        android:padding="20dp">

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="horizontal"
            android:gravity="center">

            <ImageView
                android:id="@+id/yourScoreImage"
                android:layout_width="200dp"
                android:layout_height="60dp"
                android:src="@drawable/yourscoretv"
                style="@style/Image"
                android:rotation="-2" />

            <TextView
                android:id="@+id/scoreTV"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="@string/score_tv"
                android:textSize="50sp"
                style="@style/TextView"
                android:layout_marginTop="3dp"
                android:layout_marginLeft="10dp" />
        </LinearLayout>

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="horizontal"
            android:layout_marginTop="50dp"
            android:gravity="center">

            <ImageView
                android:id="@+id/highscoreImage"
                android:layout_width="200dp"
                android:layout_height="60dp"
                android:src="@drawable/highscoretv"
                style="@style/Image"
                android:rotation="2" />

            <TextView
                android:id="@+id/highscoreTV"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="@string/high_score_tv"
                android:textSize="50sp"
                style="@style/TextView"
                android:layout_marginTop="3dp"
                android:layout_marginLeft="10dp" />
        </LinearLayout>
    </LinearLayout>

    <LinearLayout
        android:layout_width="fill_parent"
        android:layout_height="fill_parent"
        android:orientation="vertical"
        android:gravity="center_vertical">

        <ImageButton
            android:id="@+id/playAgainButton"
            android:layout_width="300dp"
            android:layout_height="70dp"
            android:src="@drawable/playagainbutton"
            style="@style/Image"
            android:rotation="5" />

        <ImageButton
            android:id="@+id/quitButton"
            style="@style/Image"
            android:layout_width="100dp"
            android:layout_height="60dp"
            android:rotation="-5"
            android:src="@drawable/quitbutton"
            android:layout_gravity="center_horizontal"
            android:layout_marginTop="40dp"
            android:layout_marginRight="10dp"/>

        <ImageButton
            android:id="@+id/resetScoreButton"
            android:layout_width="200dp"
            android:layout_height="60dp"
            android:src="@drawable/resetscorebutton"
            style="@style/Image"
            android:rotation="5"
            android:layout_marginTop="40dp"
            android:layout_marginLeft="170dp"/>
    </LinearLayout>
</LinearLayout>
